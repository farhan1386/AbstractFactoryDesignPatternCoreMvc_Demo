@model IEnumerable<AbstractFactoryDesignPatternCoreMvc_Demo.Models.Employee>

@{
    ViewData["Title"] = "Employee";
}

<h3 class="text-center text-uppercase">List of employees</h3>

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-plus-circle"></i> Add New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EmployeeNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Position)</th>
            <th>@Html.DisplayNameFor(model => model.Office)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <th>@Html.DisplayNameFor(model => model.EmployeeType)</th>
            <th>@Html.DisplayNameFor(model => model.ComputerDetails)</th>
            <th>Action(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@employee.Id">@employee.EmployeeNumber</a></td>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Office</td>
                <td>@employee.Department.DepartmentName</td>
                <td>@employee.EmployeeType.EmployeeTypeName</td>
                <td>@employee.ComputerDetails</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-info rounded-0"><i class="fas fa-pencil-alt"></i></a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger rounded-0"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
